@{
  Layout = "_Layout";
}

@using AnimalShelter.Models;

<h1>Animals</h1>

@if (@Model.Count == 0)
{
  <h3>No animals have been added yet!</h3>
}
@using (Html.BeginForm())
{
  @Html.DropDownList("sortMethod", new List<SelectListItem>
  {
    new SelectListItem { Text = "Name", Value = "AnimalName"},
    new SelectListItem { Text = "Breed", Value = "Breed"},
    new SelectListItem { Text = "Date", Value = "Date"}
  }, "Select Sorting Method")

  <input type="submit" value="Sort!" />
}

<ul>
@{
  // get the value of the dropdown
    
    
    foreach(Animal animal in Model)
    {
      <li>@Html.ActionLink($"{animal.AnimalName}", "Details", new { id = animal.AnimalId })</li>
    }
  


}
</ul>

<p>@Html.ActionLink("Add new animal", "Create")</p>